extends ../../layouts/default.pug 
block main 
    h1(class="mb=4") Chi tiết sản phẩm
    if(record.title)
        h1(class="mb-4") #{record.title} 
    if(record.parent_id) 
        div(class="mb-4") Danh mục cha: <b>#{record.parent_id}</b>
    if(record.thumbnail)
        div(class="mb-4")
            img(
                src=record.thumbnail 
                style="width: 100px"
            )
    if(record.status)
        div(class="mb-4")
            span Trạng thái: 
            if(record.status ==="active")
                span(class="badge badge-success") Hoạt động
            else 
                span(class="badge badge-danger") Không hoạt động
    a(
        href=`${prefixAdmin}/products-category/edit/${record.id}`
        class = "btn btn-warning btn-sm"
    ) Chỉnh sửa 
    script(src="/admin/js/product.js")
    script(src="/admim/js/script.js") 